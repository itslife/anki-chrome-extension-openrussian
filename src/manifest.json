{
    "name": "Anki Quicker Adder for OpenRussian.org",
    "description": "Quickly adds your favourite word to your Anki. Ankiconnect is required.",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
      "default_popup": "settings.html",
      "default_icon": "extension.png"
    },
    "content_scripts": [
        {
          "js": [
            "scripts/lib.js",
            "scripts/content-openru.js"
          ],
          "matches": [
            "https://en.openrussian.org/*"
          ],
          "css" : [
            "content.css"
          ]
        },
        {
          "js": [
            "scripts/lib.js",
            "scripts/content-rupod101.js"
          ],
          "matches": [
            "https://www.russianpod101.com/russian-vocabulary-lists/*"
          ],
          "css" : [
            "content.css"
          ]
        }
      ]
  }